alias ls='ls -G'

alias evr='nvim $VIMCONFIGDIR/init.vim'
alias ezr='nvim $DOTFILES/zsh/.zshrc'
alias edots='cd ~/dotfiles; nvim $DOTFILES'

# change from alacritty $TERM
alias ssh='TERM=xterm-256color ssh'

# history search
alias hs='history | grep --color'
alias notes='nvim ~/Documents/notes'

# TheFuck alias
eval $(thefuck --alias)
